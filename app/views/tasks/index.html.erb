<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to "#{ task.completed ? "🗹 - " : "☐ - " }", check_task_path(task) %><%= link_to "#{task.title} - ", task_path(task) %><%= link_to "🚮", destroy_task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
  <br>
  <li><%= link_to "+ADD", new_task_path %></li>
</ul>
